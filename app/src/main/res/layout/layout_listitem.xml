<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="fill_parent"
                                   app:cardCornerRadius="3dp"
                                   android:id="@+id/listItemCardView"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginLeft="8dp"
                                   android:layout_marginRight="8dp"
                                   card_view:cardElevation="4dp"

                                   android:layout_height="130dp">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"

                                                       android:layout_height="match_parent">
        <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:text="&#xf19d;"
                android:padding="0in"
                android:elevation="10dp"
                android:fontFamily="@font/fa_solid_900"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="30dp"
                app:rippleColor="@color/colorPrimary"
                android:id="@+id/activityIconView"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout" android:layout_marginTop="8dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/vertical_divider"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nameTextView"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.example.wayd.UI.IconTextView
                        android:text="&#xf51e;"
                        android:textColor="@color/gray_trans"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="46dp" android:id="@+id/iconTextView2"/>
                <org.fabiomsr.moneytextview.MoneyTextView
                        android:text="TextView"
                        app:baseTextColor="@color/gray_trans"
                        app:symbol="€"
                        app:format="###,###"
                        app:amount="256560"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/totalValueTv"
                        app:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.example.wayd.UI.IconTextView
                        android:text="&#xf017;"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="46dp" android:id="@+id/iconTextView3"/>
                <TextView
                        android:text="1d 25h"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/totalTimeSpenTv" android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.example.wayd.UI.IconTextView
                        android:text="&#xf51e; / Hour"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="46dp" android:id="@+id/iconTextView4"/>
                <org.fabiomsr.moneytextview.MoneyTextView
                        android:text="TextView"
                        app:symbol="€"
                        app:format="###,###"
                        app:amount="256560"
                        app:baseTextColor="@color/gray_trans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/valueTextView"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:text="TextView"
                android:elevation="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/nameTextView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textSize="24sp"
                android:gravity="center"
                android:fontFamily="@font/kaushan_script_regular"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

