<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
                                       xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                       app:cardCornerRadius="3dp"
                                       android:id="@+id/listItemCardView"
                                       android:layout_marginBottom="5dp"
                                       card_view:cardElevation="4dp"
                                       app:cardBackgroundColor="@color/colorPrimary"
                                       android:layout_height="100dp">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <com.example.wayd.UI.IconTextView
                android:text="&#xf19d;"

                android:background="@drawable/circle"
                android:layout_width="60dp"
                android:layout_height="60dp" android:id="@+id/iconTextView" android:layout_weight="1"
                android:textSize="35dp"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameTextView" android:layout_marginStart="8dp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/iconTextView"/>
        <TextView
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeTextView" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/valueTextView" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

