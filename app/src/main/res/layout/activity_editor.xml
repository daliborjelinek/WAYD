<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.wayd.activities.ActivityEditorActivity">
    <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar"></include>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:gravity="center|center_vertical"

            android:layout_width="398dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="96dp"
            android:id="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/action_bar">


        <com.example.wayd.UI.IconTextView
                android:text="&#xf2bb;"

                android:background="@drawable/circle"
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/textView" android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="35dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linearLayout3" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editText"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2" android:text="Value"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="42dp" android:id="@+id/spinner2" android:entries="@array/planets_array"
                android:spinnerMode="dialog"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
